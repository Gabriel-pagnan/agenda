<%- include('includes/head')%>
<%- include('includes/navBar')%>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">
                <h1 class="text-center">Agenda</h1>
                <p class="text-center lead">Seus contatos estão abaixo</p>

            <%- include('includes/messages')%>
            <% if(contatos.length > 0) { %>
                <div class="responsive-table">
                    <table class="table my-3">
                        <% contatos.forEach(contato => { %>
                            <tr>
                                <td><%= contato.nome %></td>
                                <td><%= contato.sobrenome %></td>
                                <td><%= contato.telefone %></td>
                                <td><%= contato.email %></td>
                                <td>
                                    <a href="/contato/index/<%= contato._id %>" class="btnExcluir p-1 text-center text-white nav-link" title="Editar contato">
                                        <span class="btnEdit material-icons blue md-36 "><span class="material-icons">
                                            <span class="material-icons">
                                                border_color
                                        </span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/contato/delete/<%= contato._id %>" class="btnExcluir p-1 text-center text-white nav-link" title="Deletar contato">
                                        <span class="btnExcluir material-icons red">delete</span>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>    
                    </table>
                </div>
            <% } else {%>  
                <p class="text-center lead">Não existe contatos na sua agenda.</p>
            <% } %>    
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer')%>

