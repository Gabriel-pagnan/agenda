<%- include('includes/head')%>
<%- include('includes/navBar')%>
    <div class="container">
        <div class="row">
            <div class="col-lg-2 my-5"></div>

            <div class="col-lg-8 my-5">
                <h1 class="text-center mb-5">Crie ou entre com sua conta</h1>

                <%- include('includes/messages') %>

                <div class="row mt-5">
                    <div class="col-lg me-5 my-5">
                        <h4 class="mb-3">cadastro</h4>
                        <p>Preencha o formulário e crie sua conta.</p>
                        <form class="form-cadastro" action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label>Nome</label>
                              <input type="text" class="form-control" name="name">
                              <p class="text-email"></p>
                            </div>
                            <div class="mb-3">
                              <label>Email</label>
                              <input type="email" class="form-control" name="email">
                              <p class="text-email"></p>
                            </div>
                            <div class="mb-3">
                                <label>Senha</label>
                                <input type="password" class="form-control" name="password">
                                <p class="text-pass"></p>
                              </div>
                            <button type="submit" class="btn btn-dark my-3">Criar conta</button>
                          </form>
                    </div>

                    <div class="col-lg my-5">
                        <p class="mt-5">Já possuo uma conta!</p>
                        <form class="" class="mt-3" action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label>Email:</label>
                              <input type="email" class="form-control" name="email">
                            </div>
                            <div class="mb-3">
                                <label>Senha:</label>
                                <input type="password" class="form-control" name="password">
                              </div>
                            <button type="submit" class="btn btn-success my-3">Entrar</button>
                          </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>
<%- include('includes/footer')%>

